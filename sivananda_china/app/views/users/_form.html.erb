<%= form_for @user, :html => {:class => "form-horizontal well"} do |f| %>

	<legend class="brown">注册成为新用户</legend>
	
  <% if @user.errors.any? %>
    <div id="error_explanation" class="alert alert-error">
    	<div class="row-fluid">
      	<h4><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h4>
			
		    <ul class="offset1">
		    <% @user.errors.full_messages.each do |msg| %>
		      <li><%= msg %></li>
		    <% end %>
		    </ul>
      </div>
    </div>
    <div class="blank20"></div>
  <% end %>
  
  
	<fieldset>
  <div class="control-group">
		<label class="control-label" for="inputName">Name</label>
    <div class="controls">
    	<%= f.text_field :name %>
    </div>
  </div>
  <div class="control-group">
  	<label class="control-label" for="inputPass">Password</label>

    <div class="controls">
    	<%= f.password_field :password %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="inputSalt">Confirm</label>
    <div class="controls">
    	<%= f.password_field :password_confirmation %>
    </div>
  </div>
  <div class="control-group">
  	<div class="controls">
    	<%= f.submit '注册', :class=>"btn btn-primary" %>
    </div>
  </div>
  </fieldset>
<% end %>
